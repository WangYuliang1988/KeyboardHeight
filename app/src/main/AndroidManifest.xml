<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yigelangzi.keyboardheight">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--android:theme="@style/FullScreenTheme">-->
        <activity
            android:name=".MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WebNothingActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".WebUnspecifiedActivity"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity
            android:name=".WebResizeActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".WebPanActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".NtNothingActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".NtUnspecifiedActivity"
            android:windowSoftInputMode="adjustUnspecified" />
        <activity
            android:name=".NtResizeActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".NtPanActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>